{%block table%}
<table>
    <thead>
        <tr>
        <th>Job Title</th>
        <th>Capability</th>
        <th>Job Band</th>
        <th> Spec Summary</th>
        
        </tr>
    </thead>
    {% for job in data %}
    <form action="/SubmitSpecForJob" method ="POST">
        <tr>
        <td>{{job.job_Title}}</td>
        <td>{{job.band_Name}}</td>
        <td>{{job.capability_Name}}</td>
        <td>{{job.spec_Summary}}</td>
        <td>
        <input type="text" name="SpecSummaryInput" value="{{job.spec_Summary}}">
        <input name="JobID" value="{{job.job_ID}}" type="hidden">
        </td>
        <td>
        <input type="submit" value="Submit New Job Summary">
        </td>
        <td> <a href="/JobsSpec?jobClicked={{job.job_ID}}"> View Main Job Spec</a> </td>
        </tr>
        </form>
        {% endfor %}
    
</table>

{% endblock %}
